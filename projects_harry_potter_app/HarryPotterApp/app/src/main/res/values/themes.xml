<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HarryPotterApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/hp_black</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- HarryPotterApp -->
    <style name="progress_bar">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">125dp</item>
    </style>

    <style name="search_view">
        <item name="android:background">@drawable/bg_rect_lin_grad_yellow_str_plus_corn</item>
        <item name="android:textStyle">bold</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/frame_layout_item"
    android:layout_width="match_parent"
    android:layout_height="370dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/hp_black"
        app:cardCornerRadius="22dp"
        app:cardElevation="8dp">

        <ImageView
            android:id="@+id/ivCharacter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/ivCharacterFavorite"
            style="@style/image_view_favorite_item"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <LinearLayout
            android:id="@+id/llInfoCharacter"
            style="@style/linear_layout_info_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCharacterName"
                    style="@style/text_view_names"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="ANTELO97" />

                <TextView
                    android:id="@+id/tvCharacterDetails"
                    style="@style/text_view_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:text="ANTELO97" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivCharacterDetail"
                style="@style/image_view_details_item"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
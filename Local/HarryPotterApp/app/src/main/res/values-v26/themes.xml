<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_view_titles">
        <item name="android:layout_marginHorizontal">20sp</item>
        <item name="android:layout_marginVertical">30sp</item>
        <item name="android:background">@drawable/bg_rect_lin_grad_yellow_str_corn</item>
        <item name="android:fontFamily">@font/apple_days</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:paddingVertical">20sp</item>
        <item name="android:textColor">@color/hp_black</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:statusBarColor">@color/hp_black</item>
    </style>

    <style name="linear_layout_1">
        <item name="android:layout_marginHorizontal">20sp</item>
        <item name="android:layout_marginTop">15sp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="matterial_button">
        <item name="android:fontFamily">@font/apple_days</item>
        <item name="android:textColor">@color/hp_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/hp_gold</item>
        <item name="android:strokeColor">@color/hp_black</item>
    </style>

    <style name="matterial_button_all">
        <item name="android:fontFamily">@font/apple_days</item>
        <item name="android:textColor">@color/hp_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:strokeColor">@color/hp_black</item>
    </style>

    <style name="frame_layout_item">
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:background">@drawable/bg_rect_black_str_corn</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="image_view_favorite_item">
        <item name="android:layout_gravity">top|end</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/bg_oval_lin_grad_brown</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:src">@drawable/ic_favorite</item>
        <item name="android:tint">@color/hp_white</item>
    </style>

    <style name="linear_layout_info_item">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/hp_light_brown_opacity_80</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="text_view_names">
        <item name="android:fontFamily">@font/apple_butter</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/hp_black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view_details">
        <item name="android:layout_marginVertical">2dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:fontFamily">@font/apple_butter</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/hp_black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="image_view_details_item">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:src">@drawable/ic_more_info</item>
        <item name="android:tint">@color/hp_black</item>
    </style>
</resources>